*
	box-sizing border-box
	
body 
	background #456
	font-family 'Open Sans', sans-serif
	.container
		width 700px
		margin 0 auto
		background url(/img/pug.png) no-repeat center center
		background-size 49%
		padding-bottom 10px 
	p
		margin 10px 0 0 0	
.login 
	width 500px
	margin 16px auto
	font-size 16px
	h2
		padding 60px 0 20px 0
		text-align left
		color lime

	input
		width 100%
		padding 10px 10px
	input[type="submit"]
		color lime
		font-weight bold
	.line 
		width 100px
		height 50px
		background red
	.error
		display none
		color #8a0000
	.active
		display block


